    function eyeMousedownPass(obj) {
        var obj = document.getElementById('inputPassword');
        obj.type = "text";

        document.getElementById("iEye").classList.add("d-none");
        document.getElementById("iEye").classList.remove("d-block");

        document.getElementById("iEyeSlash").classList.add("d-block");
        document.getElementById("iEyeSlash").classList.remove("d-none");
    }
    function eyeMouseupPass(obj) {
        var obj = document.getElementById('inputPassword');
        obj.type = "password";

        document.getElementById("iEyeSlash").classList.add("d-none");
        document.getElementById("iEyeSlash").classList.remove("d-block");

        document.getElementById("iEye").classList.add("d-block");
        document.getElementById("iEye").classList.remove("d-none");
    }
</script>

