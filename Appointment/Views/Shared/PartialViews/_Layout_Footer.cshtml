    $(document).ready(function () {
        $("input[type=radio]").each(function () {
            if (this.checked) {
                $(this).parent().addClass("border-primary bg-light");
            }
            else {
                $(this).parent().removeClass("border-primary bg-light");
            }
        });
    });

    // border for radio
    $('input[type=radio]').on('change', function () {
