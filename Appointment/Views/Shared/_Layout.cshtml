<!DOCTYPE html>
<html>
<head>

    <!-- load the header scripts -->
    @Html.Partial("~/Views/Shared/PartialViews/_Layout_Header.cshtml")

    <style>
        .img {
            float: left;
            height: 100px;
            width: 100px;
            padding: 15px 15px;
            font-size: 18px;
            line-height: 20px;
        }


        .navbar-navEA > li > a {
            color: black !important;
            margin-top: 20px;
        }

        .m {
            margin-top: 20px;
        }

        /* The container <div> - needed to position the dropdown content */
        .dropdown {
            position: center;
            display: inline-block;
        }

        /* Dropdown Content (Hidden by Default) */
        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #ffffff;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            /* Links inside the dropdown */
            .dropdown-content a {
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }



        /* Show the dropdown menu on hover */
        .dropdown:hover .dropdown-content {
            display: block;
        }

        .footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            background-color: #f1f1f1;
            color: white;
            text-align: center;
            color: black;
        }
    </style>
    <style>
        .table td, .table th {
            background-color: #fff;
        }

        .k-header {
            background-color: #213a7b !important;
        }

        .k-calendar th {
            color: white !important;
        }
    </style>
</head>
<body class="position-relative min-vh-100 d-flex flex-column">
    <nav class="row py-2 d-flex align-items-center footer-copyright no-gutters bg-primary px-md-5">
        @if (Session["LoggedInUser_Name"] != null)
        {
                <div class="col-12 text-white text-right pr-5">
                    <small>
                        @Html.Raw("Welcome " + HttpContext.Current.Session["LoggedInUser_Name"].ToString()) @*@HttpContext.Current.User.Identity.Name.Split('\\')[1]*@
                    </small>
                </div>
        }
    </nav>
    <nav id="TopNavbar" style="border-width:2px !important" class="navbar border-bottom border-primary navbar-expand-lg py-3 navbar-light bg-white main-padding-x inner-cont-nav d-flex w-100 main-navbar">
        <a class=" animated slideInLeft" href="@Url.Action("Index", "Calendar")">
            @*<img class="img" src="~/img/logo.png" style="width:70px;height:70px;">*@
            <img src="~/Assets/images/SSS-logo.svg" style="width:50%;height:50%;"/>
        </a>


        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        <div class="collapse navbar-collapse animated slideIn" id="navbarSupportedContent">

            @Html.Partial("~/Views/Shared/PartialViews/_TopNavbar.cshtml")
        </div>
    </nav>
    <!-- Render a page contents -->
    <div class="container-fluid pt-5 pb-5 main-padding-x flex-grow-1 position-relative">
        <i class="fas fa-filter" id="fltrIcon" style="display:none;"></i>
        @RenderBody()
    </div>
    <!-- Start Popup -->
    <div id='popupModal' class='modal fade' aria-labelledby="basicModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h6 class="modal-title" id="popupLabel"></h6>
                </div>
                <div id='popupContainer' class="modal-body">
                </div>
            </div>
        </div>
    </div>
    <!-- End Popup -->
    <footer class="footer font-small wow fadeIn animated fadeInUp " data-aos="fade-up">
        <!-- Render the footer menu -->
        <div class="row py-2 d-flex align-items-center footer-copyright no-gutters bg-primary px-md-5">
            <div class="col-12 text-white text-center">
                <small>
                    @Html.Raw("© Copyright SSS-Process " + @DateTime.Now.Year + " - Reminder")
                </small>
            </div>
        </div>
    </footer>

    <!-- load the footer scripts -->
    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(function () {
            $('.k-icon.k-i-refresh').html("");
            $('.k-grid-filter').html("<span><i class='fas fa-filter'></i></span>")
            
            

            //$('.k-icon.k-i-calendar').each(function () {
            //    debugger;
            //    this.innerHTML = "<span><i class='fas fa-calendar'></i></span>"
            //})
            //$('.k-icon.k-i-arrow-60-right').html("<span><i class='fas fa-arrow-right'></i></span>")

            //$('.k-link.k-nav-prev').html("<i class='fas fa-arrow-left'></i>")
           
        });
    </script>
    @Html.Partial("~/Views/Shared/PartialViews/_Layout_Footer.cshtml")
</body>
</html>